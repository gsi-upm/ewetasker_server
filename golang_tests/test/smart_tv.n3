@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ewe: <http://gsi.dit.upm.es/ontologies/ewe/ns/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix ewe-smarttv: <http://gsi.dit.upm.es/ontologies/ewe-connected-home-smarttv/ns/> .
@prefix ex: <http://example.org/ex#> .
@prefix dogont: <http://elite.polito.it/ontologies/dogont.owl#> .
@base  <http://gsi.dit.upm.es/ontologies/ewe-connected-home-smarttv/ns/> .


###################################
# Channel definition
###################################
ewe-smarttv:SmartTv a owl:Class ;    
    rdfs:label "Connected smart tv" ;
    rdfs:comment "This channel represents a simplified smarttv with simple capabilities" ;
    ewe:providesAction ewe-smarttv:SwitchOn ;
    ewe:providesAction ewe-smarttv:SwitchOff ;
    ewe:providesAction ewe-smarttv:DisplayImage ;
    rdfs:subClassOf ewe:Channel .


###################################
# Events definition
###################################
# This channel has not events

    
###################################
# Actions definition
###################################

ewe-smarttv:SwitchOn a owl:Class ;
    rdfs:label "Switch on" ;
    rdfs:comment "This action will switch on the TV." ;
    ewe:hasInputParameter ewe-smarttv:LocalIP ;
    ewe:hasInputParameter ewe-smarttv:PublicIP ;
    rdfs:subClassOf ewe:Action ;
    rdfs:domain ewe-smarttv:SmartTv .

ewe-smarttv:SwitchOff a owl:Class ;
    rdfs:label "Switch off" ;
    rdfs:comment "This action will switch off the TV." ;
    ewe:hasInputParameter ewe-smarttv:LocalIP ;
    ewe:hasInputParameter ewe-smarttv:PublicIP ;
    rdfs:subClassOf ewe:Action ;
    rdfs:domain ewe-smarttv:SmartTv .

ewe-smarttv:DisplayImage a owl:Class ;
    rdfs:label "Display image" ;
    rdfs:comment "This action will display an image on the screen." ;
    ewe:hasInputParameter ewe-smarttv:LocalIP ;
    ewe:hasInputParameter ewe-smarttv:PublicIP ;
    rdfs:subClassOf ewe:Action ;
    rdfs:domain ewe-smarttv:SmartTv .

###################################
# Parameters definition
###################################

ewe-smarttv:LocalIP a owl:Class ;
    rdfs:label "Local IP" ;
    rdfs:comment "This parameter represents the local IP of the TV." ;
    rdfs:subClassOf ewe:Parameter ;
    rdfs:domain ewe-smarttv:SmartTv .

ewe-smarttv:PublicIP a owl:Class ;
    rdfs:label "Public IP" ;
    rdfs:comment "This parameter represents the public IP of the TV." ;
    rdfs:subClassOf ewe:Parameter ;
    rdfs:domain ewe-smarttv:SmartTv .

