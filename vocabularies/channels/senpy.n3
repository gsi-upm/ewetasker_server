@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ewe: <http://gsi.dit.upm.es/ontologies/ewe/ns/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix ex: <http://example.org/ex#> .
@prefix dogont: <http://elite.polito.it/ontologies/dogont.owl#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix ewe-device: <http://gsi.dit.upm.es/ontologies/ewe-device/ns/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix onyx: <http://gsi.dit.upm.es/ontologies/onyx/ns/> .
@base  <http://gsi.dit.upm.es/ontologies/ewe/ns/> .


###################################
# Channel definition
###################################
ewe:Senpy a owl:Class ;    
    rdfs:label "Senpy" ;
    rdfs:comment "This channel represents Senpy, a framework for sentiment and emotion analysis services." ;
    foaf:logo "fa fa-comments" ;
    ewe:generatesEvent ewe:EmotionDetected ;
    ewe:generatesEvent ewe:SentimentDetected ;
    ewe:hasCategory ewe-device:Device ;
    rdfs:subClassOf ewe:Channel .


###################################
# Events definition
###################################
ewe:EmotionDetected a owl:Class ;
    rdfs:label "Emotion detected" ;
    rdfs:comment "This event will be triggered when a certain emotion is detected." ;
    ewe:hasOutputParameter ewe:Emotion ;
    rdfs:subClassOf ewe:Event ;
    rdfs:domain ewe:Senpy .

ewe:SentimentDetected a owl:Class ;
    rdfs:label "Sentiment detected" ;
    rdfs:comment "This event will be triggered when a certain sentiment is detected." ;
    ewe:hasOutputParameter ewe:Sentiment ;
    rdfs:subClassOf ewe:Event ;
    rdfs:domain ewe:Senpy .

    
###################################
# Actions definition
###################################
# This channel has not actions


###################################
# Parameters definition
###################################

ewe:Emotion a owl:Class ;
    rdfs:label "Detected emotion" ;
    rdfs:comment "This parameter represents the emotion detected." ;
    rdf:datatype xsd:string ;
    rdfs:subClassOf ewe:Parameter ;
    rdfs:subClassOf onyx:Emotion ;
    rdfs:domain ewe:Senpy .

ewe:Sentiment a owl:Class ;
    rdfs:label "Detected sentiment" ;
    rdfs:comment "This parameter represents the sentiment detected." ;
    rdf:datatype xsd:string ;
    rdfs:subClassOf ewe:Parameter ;
    rdfs:subClassOf onyx:Sentiment ;
    rdfs:domain ewe:Senpy .


