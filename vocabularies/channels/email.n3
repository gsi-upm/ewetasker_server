@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ewe: <http://gsi.dit.upm.es/ontologies/ewe/ns/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix ewe-email: <http://gsi.dit.upm.es/ontologies/ewe-email/ns/> .
@prefix ex: <http://example.org/ex#> .
@prefix dogont: <http://elite.polito.it/ontologies/dogont.owl#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix ewe-service: <http://gsi.dit.upm.es/ontologies/ewe-service/ns/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@base  <http://gsi.dit.upm.es/ontologies/ewe-email/ns/> .


###################################
# Channel definition
###################################
ewe-email:Email a owl:Class ;    
    rdfs:label "Email service" ;
    rdfs:comment "This channel represents an email service with basic functions" ;
    foaf:logo "fa fa-envelope" ;
    ewe:providesAction ewe-email:SendMessage ;
    ewe:generatesEvent ewe-email:NewMessageReceived ;
    ewe:generatesEvent ewe-email:MessageAbout ;
    ewe:generatesEvent ewe-email:MessageReceivedFrom ;
    ewe:hasCategory ewe-service:Service ;
    rdfs:subClassOf ewe:Channel .


###################################
# Events definition
###################################
ewe-email:NewMessageReceived a owl:Class ;
    rdfs:label "New message received" ;
    rdfs:comment "This event will be triggered when a new email message is received." ;
    ewe:hasInputParameter ewe-email:EmailAddress ;
    ewe:hasOutputParameter ewe-email:RecipientAddress ;
    ewe:hasOutputParameter ewe-email:Subject ;
    ewe:hasOutputParameter ewe-email:Message ;
    rdfs:subClassOf ewe:Event ;
    rdfs:domain ewe-email:Email .

ewe-email:MessageReceivedAbout a owl:Class ;
    rdfs:label "New message received about a determinate subject" ;
    rdfs:comment "This event will be triggered when a new email message about a concrete subject is received." ;
    ewe:hasInputParameter ewe-email:EmailAddress ;
    ewe:hasOutputParameter ewe-email:Subject ;
    rdfs:subClassOf ewe:Event ;
    rdfs:domain ewe-email:Email .

ewe-email:MessageReceivedFrom a owl:Class ;
    rdfs:label "New message received from a determinate contact" ;
    rdfs:comment "This event will be triggered when a new email message from a concrete contact is received." ;
    ewe:hasInputParameter ewe-email:EmailAddress ;
    ewe:hasOutputParameter ewe-email:RecipientAddress ;
    rdfs:subClassOf ewe:Event ;
    rdfs:domain ewe-email:Email .

    
###################################
# Actions definition
###################################

ewe-email:SendMessage a owl:Class ;
    rdfs:label "Send message" ;
    rdfs:comment "This action will send a email message." ;
    ewe:hasInputParameter ewe-email:EmailAddress ;
    rdfs:subClassOf ewe:Action ;
    rdfs:domain ewe-email:Email .


###################################
# Parameters definition
###################################

ewe-email:EmailAddress a owl:Class ;
    rdfs:label "User email address" ;
    rdfs:comment "This parameter represents user's email address." ;
    rdf:datatype xsd:string ;
    rdfs:subClassOf ewe:Parameter ;
    rdfs:domain ewe-email:Email .

ewe-email:RecipientAddress a owl:Class ;
    rdfs:label "Recipient email address" ;
    rdfs:comment "This parameter represents recipient's email address." ;
    rdf:datatype xsd:string ;
    rdfs:subClassOf ewe:Parameter ;
    rdfs:domain ewe-email:Email .

ewe-email:Subject a owl:Class ;
    rdfs:label "Email subject" ;
    rdfs:comment "This parameter represents the subject of the email message." ;
    rdf:datatype xsd:string ;
    rdfs:subClassOf ewe:Parameter ;
    rdfs:domain ewe-email:Email .

ewe-email:Message a owl:Class ;
    rdfs:label "Message content" ;
    rdfs:comment "This parameter represents the content of the email message." ;
    rdf:datatype xsd:string ;
    rdfs:subClassOf ewe:Parameter ;
    rdfs:domain ewe-email:Email .


